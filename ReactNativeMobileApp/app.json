{
  "expo": {
    "name": "Steering Wheel Controller",
    "slug": "steering-wheel-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "plugins": ["./app-config-plugin.js"],
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.steeringwheel.app",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "This app requires local network access to connect to the steering wheel device.",
        "NSBonjourServices": ["_http._tcp"]
      }
    },
    "android": {
      "package": "com.steeringwheel.app",
      "adaptiveIcon": {
        "backgroundColor": "#1a1a1a"
      },
      "permissions": ["INTERNET", "ACCESS_NETWORK_STATE", "ACCESS_WIFI_STATE"],
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "network_security_config"
    },
    "extra": {
      "eas": {
        "projectId": "c0894ec5-334e-41a4-870d-8e34ebab08c5"
      }
    }
  }
}
